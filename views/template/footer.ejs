<script type="text/javascript">
  $(document).ready(function() {
    $(window).scroll(function() {
      var top = $("body").scrollTop();
      if(top > 5) $(".header").addClass("collapse");
        else $(".header").removeClass("collapse");
    });
    var nav = $(".menu a");
    for(var i=0; i<nav.length; i++)
      if(window.location.pathname.indexOf($(nav[i]).attr("href")) != -1) {
        $(".menu li").removeClass("active");
        $(nav[i]).closest('li').addClass("active");
      }
    $(".menu-toggle").click(function() {
      $(".menu").toggleClass("active");
    });
    $(".menu a").click(function () {
      $(".menu").removeClass("active");
    });
    $(".email").keydown(function(e) {
      if(e.keyCode == 13) saveEmail();
    });
    $(".submit").click(function() {
      saveEmail();
    });
  });
  function saveEmail() {
    $.get("/saveemail/" + $(".email").val(), function(data) {
      if(data == "1") {
        $(".email").val("");
        $(".email-note").removeClass("error").html("Cool! You are in.");
      }
      else {
        $(".email-note").addClass("error").html("Invalid email. Try again.");
      }
    });
  }
</script>
